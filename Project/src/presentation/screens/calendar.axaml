<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Project.presentation.screens"
             xmlns:vm="clr-namespace:Project.application.components"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Project.presentation.screens.calendar"
             x:DataType="vm:calendarView">

	<Grid RowDefinitions="Auto,Auto,*">
		<TextBlock Grid.Row="0"
                   Text="Calendario"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,20"/>

		<StackPanel Grid.Row="1">
			<!-- Encabezado de navegación -->
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
				<Button Content="◀ Anterior" Command="{Binding PreviousMonthCommand}" />
				<TextBlock Text="{Binding MonthYearText}" FontSize="20" VerticalAlignment="Center"/>
				<Button Content="Siguiente ▶" Command="{Binding NextMonthCommand}" />
			</StackPanel>

			<!-- Días de la semana -->
			<UniformGrid Columns="7" Margin="10" HorizontalAlignment="Center">
				<TextBlock Text="Lun" HorizontalAlignment="Center"/>
				<TextBlock Text="Mar" HorizontalAlignment="Center"/>
				<TextBlock Text="Mié" HorizontalAlignment="Center"/>
				<TextBlock Text="Jue" HorizontalAlignment="Center"/>
				<TextBlock Text="Vie" HorizontalAlignment="Center"/>
				<TextBlock Text="Sáb" HorizontalAlignment="Center"/>
				<TextBlock Text="Dom" HorizontalAlignment="Center"/>
			</UniformGrid>

			<!-- Días del mes -->
			<ItemsControl ItemsSource="{Binding Days}">
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<UniformGrid Columns="7" />
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>
				<ItemsControl.ItemTemplate>
					<DataTemplate x:DataType="vm:dayView">
						<Border Background="{Binding EmotionColor}" Margin="2" CornerRadius="4" Height="40">
							<TextBlock Text="{Binding DayNumber}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</StackPanel>
	</Grid>
</UserControl>
